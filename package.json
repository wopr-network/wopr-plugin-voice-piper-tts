{
  "dependencies": {
    "dockerode": "^4.0.0"
  },
  "description": "Local Piper TTS provider using Piper in Docker",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "main": "index.js",
  "name": "@wopr-network/wopr-plugin-voice-piper-tts",
  "scripts": {
    "build": "tsc",
    "check": "biome check src/ && tsc --noEmit",
    "dev": "tsc -w",
    "format": "biome format --write src/",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/",
    "prepublishOnly": "npm run build"
  },
  "type": "module",
  "version": "1.0.0",
  "wopr": {
    "plugin": {
      "category": "voice",
      "description": "Local TTS using Piper (Docker)",
      "install": [
        {
          "image": "rhasspy/piper",
          "kind": "docker",
          "label": "Pull Piper TTS image",
          "tag": "latest"
        }
      ],
      "name": "voice-piper-tts",
      "requires": {
        "docker": [
          "rhasspy/piper:latest"
        ]
      },
      "type": "tts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ]
}
